<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bootstrap_brand_secondary_fill"
    tools:context="com.example.s_shaphatova.examprep.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/quizButton"
            android:layout_width="140dp"
            android:layout_height="61dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/bootstrap_brand_primary"
            android:onClick="onClick"
            android:text="Take a Quiz"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/bootstrap_brand_secondary_fill"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/add" />
    </LinearLayout>
</RelativeLayout>
